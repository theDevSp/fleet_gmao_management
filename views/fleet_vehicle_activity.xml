<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record model='ir.ui.view' id='fleet_vehicle_activity_form'>
            <field name="name">fleet.vehicle.activity.form</field>
            <field name="model">fleet.vehicle.activity</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="vehicle_id" />
                                <field name="montant_location" />
                            </group>
                            <group>
                                <field name="period_id" options="{'no_create':True,'no_open':True,'no_quick_create': True}"/>
                                <field name="days" />
                            </group>
                        </group>
                        <group string="Notes">
                            <field nolabel="1" name="notes" placeholder="Write here any other information"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model='ir.ui.view' id='fleet_vehicle_activity_tree'>
            <field name="name">fleet.vehicle.activity.tree</field>
            <field name="model">fleet.vehicle.activity</field>
            <field name="arch" type="xml">
                <tree>
                	<field name="vehicle_id" />
                    <field name="date"/>
                    <field name="period_id"/>
                    <field name="days" />
                    <field name="montant_location" />
                </tree>
            </field>
        </record>

        

        <record model='ir.ui.view' id='fleet_vehicle_activity_search'>
            <field name="name">fleet.vehicle.activity.search</field>
            <field name="model">fleet.vehicle.activity</field>
            <field name="arch" type="xml">
                <search>
                    <field name="vehicle_id" />
                    <group expand="0" string="Group By">
                        <filter name="groupby_vehicle" context="{'group_by' : 'vehicle_id'}" string="Vehicule"/>
                    	<filter name="groupby_period" context="{'group_by' : 'period_id'}" string="Mois"/>
                    </group>
                </search>
            </field>
        </record>

        <record model='ir.actions.act_window' id='fleet_vehicle_activity_act'>
            <field name="name">Activit√©s</field>
            <field name="res_model">fleet.vehicle.activity</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{"search_default_groupby_vehicle" : True}</field>
        </record>

        <menuitem action="fleet_vehicle_activity_act" sequence="1" parent="fleet.menu_fleet_reporting"
                  id="menu_fleet_vehicle_activity_act"
                  groups="fleet_gmao_management.group_documents_manager,fleet_gmao_management.group_documents_consultation"/>
    </data>
</odoo>
