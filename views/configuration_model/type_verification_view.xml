<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="type_verification_tree" model="ir.ui.view">
        <field name="name">Les types de vérification</field>
        <field name="model">fleet.verification.type</field>
        <field name="arch" type="xml">
            <tree string="Les types de vérification" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
   
    <record id="type_verification_view_form" model="ir.ui.view">
        <field name="name">Type de vérification - Form</field>
        <field name="model">fleet.verification.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <div class="card border-dark mt-3 bg-light" style="max-width: 30em;text-align:left;">
                            <div class="card-body text-dark">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="name" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-align-center form-control-icon"></span>
                                                <field name="name" class="form-control"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="code" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-barcode form-control-icon"></span>
                                                <field name="code" class="form-control"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </center>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="type_verification_search" model="ir.ui.view">
        <field name="name">Recherche - Type de vérification</field>
        <field name="model">fleet.verification.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_name" string="Types par nom" context="{'group_by':'name'}"/>
                    <filter name="group_by_code" string="Types par code" context="{'group_by':'code'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>