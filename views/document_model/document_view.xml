<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='documents_action' model='ir.actions.act_window'>
        <field name="name">Documents</field>
        <field name="res_model">fleet.vehicle.administratif.documents</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <record id="documents_tree" model="ir.ui.view">
        <field name="name">Liste des documents</field>
        <field name="model">fleet.vehicle.administratif.documents</field>
        <field name="arch" type="xml">
            <tree string="Liste des documents" multi_edit="1" sample="1" class="table">
                <field name="name"/>
                <field name="period_count"/>
                <field name="period_dmy"/>
            </tree>
        </field>
    </record>
   
    <record id="documents_view_form" model="ir.ui.view">
        <field name="name">Document - Form</field>
        <field name="model">fleet.vehicle.administratif.documents</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <center>
                        <div class="card border-dark mb-3 bg-light" style="max-width: 30em;text-align:left;">
                            <div class="card-body text-dark">
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="name" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-align-justify form-control-icon"></span>
                                                <field name="name" class="form-control"/>
                                            </div>  
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="period_count" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-clock form-control-icon"></span>
                                                <field name="period_count" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <label for="period_dmy" class=""/>
                                        <div class="main">
                                            <div class="form-group">
                                                <span class="fas fa-clock form-control-icon"></span>
                                                <field name="period_dmy" class="form-control" options="{'no_create': True, 'no_open': True}"/>
                                            </div>  
                                        </div>      
                                    </div>
                                </div>
                            </div>
                        </div>
                    </center>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="documents_search" model="ir.ui.view">
        <field name="name">Recherche - Documents</field>
        <field name="model">fleet.vehicle.administratif.documents</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="period_count"/>
                <field name="period_dmy"/>
            </search>
        </field>
    </record>
</odoo>