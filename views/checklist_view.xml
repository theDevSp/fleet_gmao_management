<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_checklist_form" model="ir.ui.view">
            <field name="name">fleet.verification.type.form</field>
            <field name="model">fleet.verification.type</field>
            <field name="arch" type="xml">
                <form string="Verification">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_checklist_tree" model="ir.ui.view">
            <field name="name">fleet.verification.type.tree</field>
            <field name="model">fleet.verification.type</field>
            <field name="arch" type="xml">
                <tree string="Type Verification">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <!-- action   -->
        <record id="action_type_verification" model="ir.actions.act_window">
            <field name="name">Type Vérification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fleet.verification.type</field>
            <field name="view_mode">tree,form</field>
        </record>


        <record id="view_verification_form" model="ir.ui.view">
            <field name="name">fleet.verification.form</field>
            <field name="model">fleet.verification</field>
            <field name="arch" type="xml">
                <form string="Vérification">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_verification_tree" model="ir.ui.view">
            <field name="name">fleet.verification.tree</field>
            <field name="model">fleet.verification</field>
            <field name="arch" type="xml">
                <tree string="Vérification">
                    <field name="name"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>
        <!-- action   -->
        <record id="action_verification" model="ir.actions.act_window">
            <field name="name">Vérification</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fleet.verification</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>